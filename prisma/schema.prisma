generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleName {
  ADMIN
  ACCOUNTANT
  STAFF
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

enum InvoiceStatus {
  UNPAID
  PARTIAL
  PAID
  OVERDUE
  VOID
}

enum PaymentMethod {
  CASH
  BANK
  BKASH
}

model User {
  id           String     @id @default(cuid())
  name         String
  email        String     @unique
  passwordHash String
  role         RoleName
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  auditLogs    AuditLog[]
  journalEntry JournalEntry[]

  @@index([role])
}

model CompanySetting {
  id                 String   @id @default(cuid())
  name               String
  address            String?
  phone              String?
  logoUrl            String?
  defaultCurrency    String   @default("BDT")
  fiscalYearStart    DateTime
  fiscalYearEnd      DateTime
  closedMonthUntil   DateTime?
  vatEnabled         Boolean  @default(false)
  vatPercentDefault  Decimal? @db.Decimal(8, 2)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Customer {
  id           String    @id @default(cuid())
  name         String
  email        String?
  phone        String?
  address      String?
  openingDue   Decimal   @default(0) @db.Decimal(14, 2)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  invoices     Invoice[]

  @@index([name])
}

model Invoice {
  id                  String         @id @default(cuid())
  invoiceNo           String         @unique
  customerId          String
  issueDate           DateTime
  dueDate             DateTime
  notes               String?
  terms               String?
  subtotal            Decimal        @db.Decimal(14, 2)
  taxAmount           Decimal        @default(0) @db.Decimal(14, 2)
  discountAmount      Decimal        @default(0) @db.Decimal(14, 2)
  totalAmount         Decimal        @db.Decimal(14, 2)
  status              InvoiceStatus  @default(UNPAID)
  isVoid              Boolean        @default(false)
  paymentInstructions Json?
  publicToken         String?        @unique
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  customer            Customer       @relation(fields: [customerId], references: [id])
  items               InvoiceItem[]
  payments            Payment[]

  @@index([customerId, issueDate])
  @@index([status])
}

model InvoiceItem {
  id          String   @id @default(cuid())
  invoiceId   String
  description String
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(14, 2)
  taxPercent  Decimal? @db.Decimal(6, 2)
  lineTotal   Decimal  @db.Decimal(14, 2)
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Payment {
  id              String        @id @default(cuid())
  invoiceId        String
  amount           Decimal       @db.Decimal(14, 2)
  paymentDate      DateTime
  method           PaymentMethod
  reference        String?
  notes            String?
  attachmentUrl    String?
  bankAccountId    String?
  bkashAccountId   String?
  reconciled       Boolean       @default(false)
  createdAt        DateTime      @default(now())
  invoice          Invoice       @relation(fields: [invoiceId], references: [id], onDelete: Restrict)
  bankAccount      BankAccount?  @relation(fields: [bankAccountId], references: [id])
  bkashAccount     BkashAccount? @relation(fields: [bkashAccountId], references: [id])

  @@index([invoiceId, paymentDate])
}

model ExpenseEntry {
  id             String        @id @default(cuid())
  expenseDate    DateTime
  category       String
  description    String
  amount         Decimal       @db.Decimal(14, 2)
  paidVia        PaymentMethod
  bankAccountId  String?
  bkashAccountId String?
  receiptUrl     String?
  reconciled     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  bankAccount    BankAccount?  @relation(fields: [bankAccountId], references: [id])
  bkashAccount   BkashAccount? @relation(fields: [bkashAccountId], references: [id])

  @@index([expenseDate, category])
}

model Withdrawal {
  id             String        @id @default(cuid())
  withdrawalDate DateTime
  amount         Decimal       @db.Decimal(14, 2)
  note           String?
  paidVia        PaymentMethod
  bankAccountId  String?
  bkashAccountId String?
  reconciled     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  bankAccount    BankAccount?  @relation(fields: [bankAccountId], references: [id])
  bkashAccount   BkashAccount? @relation(fields: [bkashAccountId], references: [id])

  @@index([withdrawalDate])
}

model ManualIncome {
  id             String        @id @default(cuid())
  incomeDate     DateTime
  category       String
  amount         Decimal       @db.Decimal(14, 2)
  receivedVia    PaymentMethod
  bankAccountId  String?
  bkashAccountId String?
  note           String?
  reconciled     Boolean       @default(false)
  createdAt      DateTime      @default(now())
  bankAccount    BankAccount?  @relation(fields: [bankAccountId], references: [id])
  bkashAccount   BkashAccount? @relation(fields: [bkashAccountId], references: [id])

  @@index([incomeDate, category])
}

model BankAccount {
  id            String        @id @default(cuid())
  bankName      String
  accountName   String
  accountNumber String
  branch        String?
  routing       String?
  swift         String?
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  payments      Payment[]
  expenses      ExpenseEntry[]
  withdrawals   Withdrawal[]
  manualIncomes ManualIncome[]

  @@index([bankName, accountNumber])
}

model BkashAccount {
  id            String        @id @default(cuid())
  number        String
  type          String
  merchantName  String?
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  payments      Payment[]
  expenses      ExpenseEntry[]
  withdrawals   Withdrawal[]
  manualIncomes ManualIncome[]

  @@index([number])
}

model Account {
  id          String       @id @default(cuid())
  code        String       @unique
  name        String       @unique
  type        AccountType
  parentId    String?
  isSystem    Boolean      @default(false)
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  parent      Account?     @relation("ChartParent", fields: [parentId], references: [id])
  children    Account[]    @relation("ChartParent")
  journalLines JournalLine[]

  @@index([type])
}

model JournalEntry {
  id          String        @id @default(cuid())
  date        DateTime
  reference   String?
  description String
  sourceType  String
  sourceId    String
  createdById String
  createdAt   DateTime      @default(now())
  lines       JournalLine[]
  createdBy   User          @relation(fields: [createdById], references: [id])

  @@index([date, sourceType])
}

model JournalLine {
  id             String       @id @default(cuid())
  journalEntryId String
  accountId      String
  debit          Decimal      @default(0) @db.Decimal(14, 2)
  credit         Decimal      @default(0) @db.Decimal(14, 2)
  memo           String?
  journalEntry   JournalEntry @relation(fields: [journalEntryId], references: [id], onDelete: Cascade)
  account        Account      @relation(fields: [accountId], references: [id])

  @@index([accountId])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  entity    String
  entityId  String
  metadata  Json?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([entity, createdAt])
}
